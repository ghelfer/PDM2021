<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FbActivity">

    <Button
        android:onClick="addRtDbClick"
        android:text="RealTime Database write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="readRtDbClick"
        android:text="RealTime Database read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtRT"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="addStDbClick"
        android:text="Firestore Database write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:onClick="readStDbClick"
        android:text="Firestore Database read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txtST"
        android:textSize="24sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>